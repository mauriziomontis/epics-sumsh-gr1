record(stringin, "GSMTR:turnon"){
    field(DESC, "Activate gaussmeter")
    field(DTYP, "stream")
    field(INP, "@gsmtr.proto turnon() RASPY1")
}

record(stringin, "GSMTR:turnoff"){
    field(DESC, "Deactivate gaussmeter")
    field(DTYP, "stream")
    field(INP, "@gsmtr.proto turnoff() RASPY1")
}

