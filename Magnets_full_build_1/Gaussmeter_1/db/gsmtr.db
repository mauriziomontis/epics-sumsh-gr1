record(stringin, "GSMTR:turnon"){
    field(DESC, "Activate gaussmeter")
    field(DTYP, "stream")
    field(INP, "@gsmtr.proto turnon RASPY1")
}

record(stringin, "GSMTR:turnoff"){
    field(DESC, "Deactivate gaussmeter")
    field(DTYP, "stream")
    field(INP, "@gsmtr.proto turnoff() RASPY1")
}

record(bi, "GSMTR:getstatus"){
    field(DESC, "Activate gaussmeter")
    field(DTYP, "stream")
    field(INP, "@gsmtr.proto getstatus() RASPY1")
    field(ZNAM, "on 0")
    field(ONAM, "on 1")
    field(SCAN, "5 second")
}

record(stringin, "GSMTR:getIDN"){
    field(DESC, "Monitor gaussmeter status")
    field(DTYP, "stream")
    field(INP, "@gsmtr.proto getIDN() RASPY1")
    field(PINI, "YES")
}

record(ai, "GSMTR:getmagfield"){
    field(DESC, "Read magnetic field data")
    field(DTYP, "stream")
    field(INP, "@gsmtr.proto getmagfield() RASPY1")
    field(SCAN, "1 second")
    field(DISV, "0")
    field(SDIS, "GSMTR:getstatus PP")
    field(EGU, "gauss")
}

record(ai, "GSMTR:getvolt"){
    field(DESC, "Read voltage data")
    field(DTYP, "stream")
    field(INP, "@gsmtr.proto getvolt() RASPY1")
    field(SCAN, "1 second")
    field(DISV, "0")
    field(SDIS, "GSMTR:getstatus PP")
    field(EGU, "volt")
}

    


    
